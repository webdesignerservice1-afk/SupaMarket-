const Button = ({ children, onClick, className = "", variant = "primary" }: any) => {
  const baseStyles = "px-8 py-4 rounded-full font-bold transition-all transform hover:scale-105 active:scale-95 flex items-center justify-center gap-2 w-full md:w-auto"
  const variants: any = {
    primary: "bg-[#e87ba0] text-white hover:bg-[#d46a8e] shadow-lg",
    whatsapp: "bg-[#25D366] text-white hover:bg-[#1ebd5b] shadow-lg",
  }
  return (
    <button onClick={onClick} className={`${baseStyles} ${variants[variant]} ${className}`}>
      {children}
    </button>
  )
}

